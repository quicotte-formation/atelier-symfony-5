{% extends 'base.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block body %}
    <h1>Commande index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateHeureCommande</th>
                <th>Client</th>
                <th>Etat</th>
                <th>Nb. produits</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for donnee in donnees %}
            <tr>
                <td>{{ donnee.com.id }}</td>
                <td>{{ donnee.com.dateHeureCommande ? donnee.com.dateHeureCommande|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ donnee.com.client }}</td>
                <td>{{ donnee.com.etat }}</td>
                <td>{{ donnee.nb_prod }}</td>
                <td>
                    <a href="{{ path('admin_commande_show', {'id': donnee.com.id}) }}">show</a>
                    <a href="{{ path('admin_commande_edit', {'id': donnee.com.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_commande_new') }}">Create new</a>
{% endblock %}
